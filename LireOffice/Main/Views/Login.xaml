<UserControl x:Class="LireOffice.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LireOffice.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="Login View" FontSize="48" Margin="24" />

        <Button Command="{Binding NavigateCommand}" CommandParameter="Main" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16">Navigate to View A</Button>
    </Grid>
</UserControl>